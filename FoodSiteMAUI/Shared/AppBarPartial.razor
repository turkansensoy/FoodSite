<MudAppBar Color="Color.Primary" Fixed="false" Dense="true">
    <MudSpacer />
    <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver">
        <ActivatorContent>
            <MudButton Variant="Variant.Filled" Color="Color.Primary">Giriş Yap/Kayıt Ol</MudButton>
        </ActivatorContent>
        <ChildContent>
            <MudNavMenu Dense="true" Color="Color.Info" Width="250px">
                <MudNavLink Href="/login" Icon="@Icons.Material.Filled.Dashboard">Giriş Yap</MudNavLink>
                <MudNavLink Href="/register" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Storage">Kayıt ol</MudNavLink>
            </MudNavMenu>
        </ChildContent>
    </MudMenu>
</MudAppBar>